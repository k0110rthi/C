**************************************************USING STRUCT IN PROGRAM*****************************

#include<iostream>
using namespace std;

struct stud
{
    char name[50];
    int roll_no;
    int marks;
};
int main()
{
    stud s;
    cout<<"\nEnter the name : ";
    cin.get(s.name, 50);
    cout<<"\nEnter the roll_no :";
    cin>>s.roll_no;
    cout<<"\nEnter the marks : ";
    cin>>s.marks;
    
    cout<<"\nStudent details"<< endl;
    cout<<"Name :"<< s.name << endl;
    cout<<"Roll no :"<< s.roll_no <<endl;
    cout<<"Mark :"<< s.marks;
    return 0;
}

***************************************************DISPLAYUING 0 TO 10 ************************************************

#include<iostream>
using namespace std;

int main()
{
    int i;
    cout<<"\nNumbers to display"<<endl;
    for(i=0;i<11;i++)
    {
        cout<<i<<endl;
        
        }
        return 0;
}

*********************************************** SWAPPING OF TWO VARIABLE *******************************************

#include<iostream>
 using namespace std;
 
 int main()
 {
     int a,b;
     cin>>a>>b;
     a=a+b-(b=a);
     cout<<"Values of a and b : "<<a <<endl<<b;
     return 0;
 }
 
 
 
 

